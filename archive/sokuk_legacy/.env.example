# Environment Configuration Template
# Copy this file to .env and adjust values for your environment

# Application Settings
APP_NAME="Robust Streamlit App"
APP_VERSION="1.0.0"
ENV=dev
DEBUG=true
HOST=localhost
PORT=8501

# Directories
DATA_DIR=./data
LOG_DIR=./logs

# Database Configuration
DATABASE_URL=duckdb:///app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000

# Job System
JOB_BACKEND=memory
JOB_MAX_WORKERS=4
JOB_TIMEOUT=3600

# Security
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_TIMEOUT=86400
BCRYPT_ROUNDS=12

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION=30
BACKUP_SCHEDULE_FULL="0 2 * * *"
BACKUP_SCHEDULE_INC="0 */1 * * *"

# Feature Flags
FEATURE_AUTH=true
FEATURE_JOBS=true
FEATURE_BACKUP=true
FEATURE_METRICS=true

# Maintenance Mode
MAINTENANCE_MODE=false