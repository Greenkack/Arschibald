# ========================================
# BOKUK2 - Application Configuration
# ========================================

# Environment (dev/stage/prod)
ENV=dev
DEBUG=true

# Application Settings
APP_NAME=BOKUK2 - Solar Calculator
APP_VERSION=2.0.0
APP_MODE=online
APP_THEME=dark
APP_COMPUTE=accurate

# Server
HOST=localhost
PORT=8501

# Paths
DATA_DIR=./data
LOG_DIR=./logs

# Database
DATABASE_URL=sqlite:///./data/app_data.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Cache
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000

# Performance
PERF_RESPONSE_TIME_TARGET=50
PERF_CACHE_WARMING=true
PERF_LAZY_LOADING=true
PERF_MAX_MEMORY_MB=2048

# Logging
LOG_LEVEL=INFO
LOG_JSON=false

# Features (Enable/Disable core modules)
FEATURE_CONFIG=true
FEATURE_LOGGING=true
FEATURE_CACHE=true
FEATURE_SESSION_PERSISTENCE=true
FEATURE_DATABASE_POOLING=true

# Phase 5-12: Advanced Features
FEATURE_SECURITY=true
FEATURE_ROUTER=true
FEATURE_FORMS=true
FEATURE_WIDGETS=true
FEATURE_NAVIGATION_HISTORY=true
FEATURE_JOBS=true
FEATURE_MIGRATIONS=true
FEATURE_CACHE_EXTENSIONS=true
FEATURE_DB_EXTENSIONS=true
FEATURE_DI_CONTAINER=true

# Security
SECRET_KEY=dev-secret-key-change-in-production
SESSION_TIMEOUT=86400
BCRYPT_ROUNDS=12

# Backup
BACKUP_ENABLED=false
BACKUP_PATH=./backups
BACKUP_RETENTION=30
